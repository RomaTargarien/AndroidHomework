<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <ImageView
        android:id="@+id/imageView_2"
        android:layout_width="412dp"
        android:layout_height="412dp"
        android:foregroundGravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>



    <View
        android:id="@+id/view_heart"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="360dp"
        android:alpha="0.3"
        android:foreground="@drawable/red_like"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.971">

    </View>

    <View
        android:id="@+id/view_flag"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="28dp"
        android:alpha="0.3"
        android:foreground="@drawable/ic_baseline_turned_in_not_24"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.971">

    </View>

    <View
        android:id="@+id/view_comment"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="224dp"
        android:alpha="0.3"
        android:foreground="@drawable/ic_baseline_comment_24"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.221"
        app:layout_constraintStart_toEndOf="@+id/likes_textView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.971">

    </View>

    <TextView
        android:id="@+id/likes_textView"
        style="@style/PrimarySecondTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="280dp"
        android:textColor="@color/white"
        android:textDirection="ltr"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_2"
        app:layout_constraintStart_toEndOf="@+id/view_heart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.896">

    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_comments"
        android:layout_width="374dp"
        android:layout_height="127dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_2" />


    <View
        android:id="@+id/view3"
        android:layout_width="343dp"
        android:layout_height="49dp"
        android:layout_marginStart="32dp"
        android:foreground="@drawable/wrapper"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </View>

    <TextView
        android:id="@+id/comments_textView"
        style="@style/PrimarySecondTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="280dp"
        android:text="30"
        android:textColor="@color/white"
        android:textDirection="ltr"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_2"
        app:layout_constraintStart_toEndOf="@+id/view_comment"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.896">

    </TextView>

    <EditText
        android:id="@+id/editText_add_comment"
        android:layout_width="364dp"
        android:layout_height="48dp"
        android:layout_marginStart="104dp"
        android:background="@android:color/transparent"
        android:hint="Add a comment.."
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view_comments"
        app:layout_constraintVertical_bias="0.975"
        tools:ignore="SmallSp">

    </EditText>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="584dp"
        android:src="@drawable/brad_pitt_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        style="@style/MainTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="BRAD"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>